// Напишите программу, которая принимает на
// вход число и выдаёт сумму цифр в числе.

Console.Write("Enter a number N: ");
int N = Convert.ToInt32(Console.ReadLine());
int sum = 0;
while (N > 0)
{
    int number = N % 10;
    N = N /10;
    sum = sum + number;
}
Console.WriteLine($"Result = {sum}");
